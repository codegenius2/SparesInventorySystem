@using BikeSparesInventorySystem.Data.Enums;
@inherits LayoutComponentBase
@inject BikeSparesInventorySystem.Data.Services.AuthService AuthService;
@inject NavigationManager NavigationManager;
@inject IDialogService DialogService
@inject ISnackbar Snackbar

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudText>@Title</MudText>
        <MudSpacer />
        <MudStack Row="true" Justify="Justify.Center" AlignItems="AlignItems.Center">
            <MudAvatar Color="@(AuthService.CurrentUser.Role == UserRole.Admin ? Color.Warning : Color.Default)" Variant="Variant.Filled">@AuthService.CurrentUser.UserName.First()</MudAvatar>
            <MudTooltip Text="@Enum.GetName(AuthService.CurrentUser.Role)">
                <MudText Typo="Typo.body1">@AuthService.CurrentUser.FullName</MudText>
            </MudTooltip>
            <MudIconButton Icon="@Icons.Material.Filled.Logout" Variant="Variant.Filled" Color="Color.Error" Size="Size.Small" OnClick="Logout" />
        </MudStack>        
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen">
        <NavMenu/>
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>
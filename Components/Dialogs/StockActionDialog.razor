@inject ISnackbar Snackbar
@inject BikeSparesInventorySystem.Services.AuthService AuthService
@inject BikeSparesInventorySystem.Repositories.Repository<Spare> SpareRepository;
@inject BikeSparesInventorySystem.Repositories.Repository<ActivityLog> ActivityLogRepository;

<MudDialog>
    <DialogContent>
        <MudForm @ref="Form">
            <MudNumericField @bind-Value="@Quantity" Required="true" Label="Quantity" Variant="Variant.Text" Min="1" Max="@MaxQuantity" />
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Variant="Variant.Filled" Color="@ButtonColor" DisableElevation="true" OnClick="Submit">@(Enum.GetName(StockAction))</MudButton>
    </DialogActions>
</MudDialog>
